{
  "root": true,
  "ignorePatterns": "build/index.js",
  "overrides": [
    {
      "files": ["*.js"],
      "extends": "sukka/node"
    },
    {
      "files": ["*.ts", "*.tsx"],
      "plugins": ["react-hooks"],
      "extends": ["sukka/typescript", "plugin:react-hooks/recommended"],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      }
    }
  ]
}
